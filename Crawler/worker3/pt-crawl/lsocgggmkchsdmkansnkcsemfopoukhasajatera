    <script type="text/javascript">
	window.onscroll = function() {
    var scrollPos = window.pageYOffset
    var actionPos = 200
		var headerLogo = document.getElementById('header-logo')
		var headerTitle = document.getElementById('header-article-title')

    if (scrollPos > actionPos) {
			// fadeOut(headerLogo, 200)
			headerLogo.classList.add('header-hidden')
			headerLogo.classList.remove('header-visible')

      window.setTimeout(function() {
				headerTitle.classList.remove('header-hidden')
				headerTitle.classList.add('header-visible')
			}, 10);
    } else if (scrollPos < actionPos) {
			headerTitle.classList.add('header-hidden')
			headerTitle.classList.remove('header-visible')

			window.setTimeout(function() {
				headerLogo.style.display = 'inline-block'
				headerLogo.classList.remove('header-hidden')
				headerLogo.classList.add('header-visible')
			}, 10);
    }
	}
</script>

