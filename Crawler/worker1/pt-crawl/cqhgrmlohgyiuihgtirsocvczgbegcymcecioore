<script type="text/javascript">
function check_article_auth() {
	var name_url = "/authentication/get-article/4598";
	$.ajax({
		type: "GET",
		url: name_url,
		success: function(data) {
            if (!data.error) {
    			$(".article-body").html(data.text);
    			$(".paywall").remove();
    			$(".article-body-wrap").removeClass('paywall-base');
            }
		}
	});
}
$(document).ready(function() {
    check_article_auth();
    $("#paywall-signin-form").submit(function(event) {
    	$("#paywall-signin-form-button").prop('disabled', true);
    	var url = "/authentication";
    	$.ajax({
    		type: "POST",
    		url: url,
    		data: $("#paywall-signin-form").serialize(),
    		success: function(data) {
                if (!data.error) {
        			$('.modal-state:checked').prop('checked', false).change();
        			$('.sign-in-name').text('Welcome, '+data.name);
        			$("#paywall-signin-form-button").prop('disabled', false);
                    check_article_auth();
                } else {
                    $('#paywall_error').text(data.error);
                }
    		},
    		error: function(data) {
                var response = jQuery.parseJSON( data.responseText );
                $('#paywall_error').text("There was an error signing in. Please try again.");
    		},
    	});
    	event.preventDefault();
    });
});
</script>
		<script type="text/javascript">
			$(document).ready(function() {
        $('#link-sub-button').click(function(event) {
          event.preventDefault();
          window.location = "/authentication/link-subscription";
      	});

				$("#signin-form").submit(function(event) {
					$("#signin-form-button").prop('disabled', true);
					var url = "/authentication";
					$.ajax({
						type: "POST",
						url: url,
						data: $("#signin-form").serialize(),
						success: function(data) {
							if (!data.error) {
								$('.modal-state:checked').prop('checked', false).change();
								$('.sign-in-name').html('Welcome, '+data.name+' <a href="/authentication/sign_out" ><small>(Sign out)</small></a>');
								$("#signin-form-button").prop('disabled', false);
									if (typeof check_article_auth == 'function') {
										check_article_auth();
									}
							} else {
								$("#signin-form-button").prop('disabled', false);
								$('#signin_error').text(data.error);
							}
						},
							error: function(data) {
								$("#signin-form-button").prop('disabled', false);
								var response = jQuery.parseJSON( data.responseText );
								$('#signin_error').text("There was an error signing in. Please try again.");
							},
					});
					event.preventDefault();
				});

